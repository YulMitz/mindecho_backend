
model Diary {
  id           String        @id @default(cuid())
  userId       String
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  diaryEntries DiaryEntry[]

  @@index([userId])
  @@map("diaries")
}

model DiaryEntry {
  id        String   @id @default(cuid())
  diaryId   String
  userId    String
  content   String   @db.Text
  mood      MoodType @default(OKAY)
  entryDate DateTime @map("entry_date")
  editCount Int      @default(0) @map("edit_count")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  diary     Diary    @relation(fields: [diaryId], references: [id], onDelete: Cascade)

  @@index([userId, entryDate(sort: Desc)])
  @@map("diary_entries")
}

enum MoodType {
  VERY_BAD
  BAD
  OKAY
  GOOD
  HAPPY
}

model DiaryAnalysis {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  mode          String   // 'CBT' or 'MBT'
  result        Json     // The full analysis result from LLM
  riskLevel     String   @map("risk_level") // 'low', 'moderate', 'high'
  entriesCount  Int      @map("entries_count")
  createdAt     DateTime @default(now()) @map("created_at")

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("diary_analyses")
}
